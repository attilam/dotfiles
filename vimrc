set nocompatible

filetype plugin indent on
syntax enable

set keywordprg=":help"

set autoindent
set backspace=indent,eol,start

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set ttimeout
set ttimeoutlen=50

set ignorecase
set incsearch
set hlsearch

set laststatus=2

set wildmenu

set showmatch

let mapleader = ","
let g:mapleader = ","

nnoremap <leader>v <C-w>v<C-w>l
nnoremap <leader>s <C-w>s
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

set number
set relativenumber

set showcmd

